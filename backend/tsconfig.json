{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "allowImportingTsExtensions": true,
    "noEmit": true,

    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleDetection": "force"
  },
  "include": ["src"]
}
